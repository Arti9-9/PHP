{% extends 'base.html.twig' %}
{% block body %}
    {#    footer#}
    {{ include('elements/header.html.twig') }}
    {#    block-main#}
    <div class="container">
        <div class="row mt-5 mb-3 justify-content-center">
            <h1 class="display-4 text-light">
            <center   
                <span class="text-danger">Б</span>иблиотека
            </h1>
        </div>
        <div class="container ">
            <div class="d-flex justify-content-start flex-wrap">
                {% for book in books %}
                <div class="container bg-success bg-gradient ">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="{{ asset('uploads/img/' ~ book.image) }}" width="286" height="286" class="card-img-top" alt="Картинка продукта"> 
                        </div>
                        <div class="col-sm-8">
                            <h5 class="card-title text-truncate">{{ book.title }}</h5>
                            <h5 class="card-title text-truncate">{{ book.author }}</h5>
                            <p class="card-text text-muted">{{ book.date ? book.date|date('Y-m-d H:i:s') : '' }}</p>
                            {% if app.user %}
                                <div class="d-flex justify-content-between mt-2">
                                    <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-danger">Редактировать</a>
                                    <a href="{{ path('book_delete', {'id': book.id}) }}" class="btn btn-danger">Удалить</a>
                                    <a href="{{ asset('uploads/file/' ~ book.file) }}" class="btn btn-primary col-6">Читать</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>    
                {% else %}
                    <h2 class="text-center">Нету продуктов</h2>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
